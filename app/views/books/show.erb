<h2><%= @book.name %></h2>
<% if @author %>
<p>By <%= @author.name %></p>
<% else %>
<p>Author unknown</p>
<% end %>
<p>Published in <%= @book.year_published %></p>
<p>Advance: $<%= @book.advance %></p>
<form action="/books/<%= @book.id %>/edit" method="GET">
    <input type="submit" id="edit" value="Edit Book">
</form>
<form action="/books/<%= @book.id %>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="DELETE">
    <input type="submit" id="edit" value="Delete Book">
</form>