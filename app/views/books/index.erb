<h2 class="title">All Books</h2>
<ul>
    <% @books.each do |book| %>
    <li class="list-item"><a href="/books/<%= book.slug %>"><%= book.title %></a> (<%= book.year_published %>) - $<%= book.format_advance %></li>
    <% end %>
</ul>
<form action="/books/new" method="get">
    <button class="button">Add a New Book</button>
</form>